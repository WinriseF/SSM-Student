<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/aop
        https://www.springframework.org/schema/aop/spring-aop.xsd">

    <context:component-scan base-package="com.java"/>

<!--    <aop:aspectj-autoproxy/>-->


    <!-- 1. 定义切面 Bean：将 LogAspect 交给 Spring 管理 -->
    <bean id="logAspect" class="com.java.aspect.LogAspect"/>

    <!-- 2. 配置 AOP -->
    <aop:config>
        <!-- 3. 定义切入点：匹配 StudentService 类中的所有方法 -->
        <aop:pointcut id="studentServicePointcut"
                      expression="execution(* com.java.service.StudentService.*(..))"/>

        <!-- 4. 将切面与切入点关联起来 -->
        <aop:aspect ref="logAspect">
            <!-- 5. 配置前置通知：将 logBefore 方法绑定到切入点之前执行 -->
            <aop:before method="logBefore" pointcut-ref="studentServicePointcut"/>

            <!-- 6. 配置后置通知：将 logAfter 方法绑定到切入点之后执行 -->
            <aop:after method="logAfter" pointcut-ref="studentServicePointcut"/>
        </aop:aspect>
    </aop:config>



    <!-- 1. 配置主数据源 (Master) -->
    <bean id="masterDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://119.91.35.26:3306/master_db?useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="master_db"/>
        <property name="password" value="GySYprph6h4tYKEB"/>
    </bean>

    <!-- 2. 配置从数据源 (Slave) -->
    <bean id="slaveDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://119.91.35.26:3306/slave_db?useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="slave_db"/>
        <property name="password" value="GySYprph6h4tYKEB"/>
    </bean>

    <!-- 3. 配置动态数据源路由器 -->
    <bean id="dynamicDataSource" class="com.java.datasource.DynamicDataSource">
        <property name="targetDataSources">
            <map key-type="java.lang.String">
                <!-- key就是查找键，value是真正的数据源bean -->
                <entry key="master" value-ref="masterDataSource"/>
                <entry key="slave" value-ref="slaveDataSource"/>
            </map>
        </property>
        <!-- 指定默认的数据源，当查找键找不到时，默认使用主库 -->
        <property name="defaultTargetDataSource" ref="masterDataSource"/>
    </bean>

    <!-- 4. 将JdbcTemplate的数据源指向动态数据源 -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dynamicDataSource"/>
    </bean>

</beans>